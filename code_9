// Question:
//you have been given array of 0,1,2 2,2,1,0,0,1,2 sort the array 
// without using any extra space and in single traversal

#include <iostream>
#include <algorithm>
using namespace std;
int main() {
    int arr[] = {2, 2, 1, 0, 0, 1, 2, 0, 1};
    int n = sizeof(arr) / sizeof(arr[0]);
    int low = 0, mid = 0, high = n - 1;
    while (mid <= high) {
        switch (arr[mid]) {
            case 0:
                swap(arr[low], arr[mid]);
                low++;
                mid++;
                break;
            case 1:
                mid++;
                break;
            case 2:
                swap(arr[mid], arr[high]);
                high--;
                break;
        }
    }
    for (int i = 0; i < n; i++) {
        cout << arr[i] << " ";
    }
    return 0;
}

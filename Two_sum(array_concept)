// Question:
//sorted array is given print the sum of two values is present in the array or not 
//then check the sum if present in array then return the index of the number
//two sum in array problem
//if the target not present in the array then print -1

// Solution:
#include<iostream>
using namespace std;
int main(){
    int arr[] = {1,2,3,4,5,6,7,8,9};
    int n = sizeof(arr)/sizeof(arr[0]);
    int target = 10;
    int left = 0;
    int right = n-1;
    while(left<right){
        int sum = arr[left] + arr [right];
        if(sum == target){
            cout<<"Pair found at index: "<<left<<" and "<<right<<endl;
            break;
        }
        else if(sum < target){
            left++;
        }
        else{
            right--;
        }
    }
    return 0;
}
